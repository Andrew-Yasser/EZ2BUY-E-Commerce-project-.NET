                    <div class="row g-0 align-items-center">
                        <div class="col-md-9 p-4">
                            <h2 class="fw-bold text-dark">Best Sellers 2025</h2>
                            <p class="text-dark opacity-75">Shop top-rated products across all categories</p>
                            <a asp-action="Products" class="btn btn-dark rounded-3">See Best Sellers <i class="bi bi-arrow-right"></i></a>
                        </div>
                        <div class="col-md-3">
                            <img src="~/images/static/laptop-rm.png" class="img-fluid rounded-end" alt="Spring Collection" style="max-height:300px;">
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right Discount Highlight -->
            <div class="col-lg-4 col-md-12 position-relative">
                <div class="card border-0 rounded-4 shadow-sm text-center p-4" style="background: #e6f0fa;">
                    <h3 class="fw-bold text-primary">Limited Time</h3>
                    <p class="text-dark opacity-75">Flash sales on top picks — up to 40% off!</p>
                    <a href="#" class="btn btn-outline-primary rounded-3 mb-1">Shop Deals</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Promotional Banner Section -->
